# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()

# Bot
POST    /bot/talk                   @controllers.Bot.talk()
POST    /bot/compile               	@controllers.Bot.compile()
POST    /bot/reload                 @controllers.Bot.reload()
GET     /bot/bots                   @controllers.Bot.bots()

#Edit
GET     /edit/folders               @controllers.Edit.folders()
GET     /edit/files                 @controllers.Edit.files()
GET     /edit/file                  @controllers.Edit.file()
POST    /edit/upload				@controllers.Edit.upload()
POST    /edit/create                @controllers.Edit.create()
DELETE  /edit/remove                @controllers.Edit.remove()
GET     /edit/help                  @controllers.Edit.help()

#User
GET     /users                      @controllers.Users.readAll()

#API
GET     /api/ask                    @controllers.Api.ask()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)