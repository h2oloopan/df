# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()

# Bot
POST    /bot/talk                   @controllers.Bot.talk()
POST    /bot/compile               	@controllers.Bot.compile()
POST    /bot/reload                 @controllers.Bot.reload()
GET     /bot/bots                   @controllers.Bot.bots()
GET     /bot/grammars               @controllers.Bot.grammars()
GET     /bot/aimls                  @controllers.Bot.aimls()

#Edit
GET     /edit/file                  @controllers.Edit.file()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)